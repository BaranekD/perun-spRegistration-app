<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="cz.metacentrum.perun.spRegistration.persistence"/>
    <context:property-placeholder properties-ref="properties" />

    <bean id="defaultProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="properties">
            <props>
                <prop key="jdbc.driver">org.postgresql.Driver</prop>
                <prop key="jdbc.url">jdbc:postgresql://cloud69b.cerit-sc.cz/spregistration</prop>
                <prop key="jdbc.username">spreg</prop>
                <prop key="jdbc.password">spreg123</prop>
                <prop key="rpc.url">XYZ</prop>
                <prop key="rpc.user">XYZ</prop>
                <prop key="rpc.password">XYZ</prop>
                <prop key="admins">62692,0,0</prop>
                <prop key="attr.idpAttribute.name">urn:perun:facility:attribute-def:def:proxyIdentifiers</prop>
                <prop key="attr.idpAttribute.value">XYZ</prop>
                <prop key="saml.attrs">eduPersonPrincipalName,eduPersonUniqueID,displayName,mail,schacHomeOrganisation,eduPersonScopedAffiliation,forwardedScopedAffiliation,eduPersonEntitlement,bonaFideStatus,eduPersonORCID,country</prop>
                <prop key="oidc.scopes">openid,profile,email,address,phone,offline_access,perun_api,groupNames,permissions_ega,forwardedScopedAffiliations,bona_fide_status,country,eduPersonEntitlement</prop>
                <prop key="oidc.isEnabled">true</prop>
            </props>
        </property>
    </bean>

    <bean id="properties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="properties" ref="defaultProperties"/>
        <property name="locations">
            <list>
                <value>file:/etc/perun/perun-spRegistration.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
    </bean>


    <bean id="facilityAttributesProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="properties">
            <props>
                <prop key="attributes.common.1.attrName">urn:perun:facility:attribute-def:def:serviceName</prop>
                <prop key="attributes.common.1.isRequired">true</prop>
                <prop key="attributes.common.2.attrName">urn:perun:facility:attribute-def:def:serviceDescription</prop>
                <prop key="attributes.common.2.isRequired">true</prop>
                <prop key="attributes.common.3.attrName">urn:perun:facility:attribute-def:def:organizationName</prop>
                <prop key="attributes.common.3.isRequired">true</prop>
                <prop key="attributes.common.4.attrName">urn:perun:facility:attribute-def:def:privacyPolicyURL</prop>
                <prop key="attributes.common.4.isRequired">true</prop>
                <prop key="attributes.common.5.attrName">urn:perun:facility:attribute-def:def:informationURL</prop>
                <prop key="attributes.common.5.isRequired">true</prop>
                <prop key="attributes.common.6.attrName">urn:perun:facility:attribute-def:def:CoCo</prop>
                <prop key="attributes.common.6.isRequired">true</prop>
                <prop key="attributes.common.7.attrName">urn:perun:facility:attribute-def:def:RaS</prop>
                <prop key="attributes.common.7.isRequired">true</prop>
                <prop key="attributes.common.8.attrName">urn:perun:facility:attribute-def:def:allowRegistration</prop>
                <prop key="attributes.common.8.isRequired">true</prop>
                <prop key="attributes.common.9.attrName">urn:perun:facility:attribute-def:def:dynamicRegistration</prop>
                <prop key="attributes.common.9.isRequired">true</prop>
                <prop key="attributes.common.10.attrName">urn:perun:facility:attribute-def:def:checkGroupMembership</prop>
                <prop key="attributes.common.10.isRequired">true</prop>
                <prop key="attributes.common.11.attrName">urn:perun:facility:attribute-def:def:proxyIdentifiers</prop>
                <prop key="attributes.common.11.isRequired">true</prop>
                <prop key="attributes.common.12.attrName">urn:perun:facility:attribute-def:def:registrationURL</prop>
                <prop key="attributes.common.12.isRequired">true</prop>
                <prop key="attributes.common.13.attrName">urn:perun:facility:attribute-def:def:showOnServiceList</prop>
                <prop key="attributes.common.13.isRequired">true</prop>
                <prop key="attributes.saml.14.attrName">urn:perun:facility:attribute-def:def:reqAups</prop>
                <prop key="attributes.saml.14.isRequired">true</prop>
                <prop key="attributes.saml.15.attrName">urn:perun:facility:attribute-def:def:consentEnabled</prop>
                <prop key="attributes.saml.15.isRequired">true</prop>
                <prop key="attributes.saml.16.attrName">urn:perun:facility:attribute-def:def:entityID</prop>
                <prop key="attributes.saml.16.isRequired">true</prop>
                <prop key="attributes.saml.17.attrName">urn:perun:facility:attribute-def:def:assertionConsumerService</prop>
                <prop key="attributes.saml.17.isRequired">true</prop>
                <prop key="attributes.saml.18.attrName">urn:perun:facility:attribute-def:def:singleLogoutService</prop>
                <prop key="attributes.saml.18.isRequired">true</prop>
                <prop key="attributes.saml.19.attrName">urn:perun:facility:attribute-def:def:requiredAttributes</prop>
                <prop key="attributes.saml.19.isRequired">true</prop>
                <prop key="attributes.saml.20.attrName">urn:perun:facility:attribute-def:def:certData</prop>
                <prop key="attributes.saml.20.isRequired">true</prop>
                <prop key="attributes.oidc.21.attrName">urn:perun:facility:attribute-def:def:OIDCClientID</prop>
                <prop key="attributes.oidc.21.isRequired">true</prop>
                <prop key="attributes.oidc.22.attrName">urn:perun:facility:attribute-def:def:OIDCRedirectURIs</prop>
                <prop key="attributes.oidc.22.isRequired">true</prop>
                <prop key="attributes.oidc.23.attrName">urn:perun:facility:attribute-def:def:OIDCGrantTypes</prop>
                <prop key="attributes.oidc.23.isRequired">true</prop>
                <prop key="attributes.oidc.24.attrName">urn:perun:facility:attribute-def:def:OIDCResponseTypes</prop>
                <prop key="attributes.oidc.24.isRequired">true</prop>
                <prop key="attributes.oidc.25.attrName">urn:perun:facility:attribute-def:def:OIDCAllowIntrospection</prop>
                <prop key="attributes.oidc.25.isRequired">true</prop>
                <prop key="attributes.oidc.26.attrName">urn:perun:facility:attribute-def:def:requiredScopes</prop>
                <prop key="attributes.oidc.26.isRequired">true</prop>
                <prop key="attributes.oidc.27.attrName">urn:perun:facility:attribute-def:def:OIDCLogoUrl</prop>
                <prop key="attributes.oidc.27.isRequired">true</prop>
            </props>
        </property>
        <property name="locations">
            <list>
                <value>file:/etc/perun/perun-spRegistration-attrs.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${jdbc.driver}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="rpcConnector" class="cz.metacentrum.perun.spRegistration.persistence.rpc.impl.PerunConnectorRpc">
        <property name="perunRpcUrl" value="${rpc.url}"/>
        <property name="perunRpcUser" value="${rpc.user}"/>
        <property name="perunRpcPassword" value="${rpc.password}"/>
    </bean>

    <bean id="requestManager" class="cz.metacentrum.perun.spRegistration.persistence.managers.impl.RequestManagerImpl">
        <constructor-arg name="config" ref="config" />
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <bean id="config" class="cz.metacentrum.perun.spRegistration.persistence.Config">
        <constructor-arg name="connector" ref="rpcConnector" />
        <constructor-arg name="admins" value="#{'${admins}'.split('\s*,\s*')}" />
        <constructor-arg name="idpAttribute" value="${attr.idpAttribute.name}" />
        <constructor-arg name="idpAttributeValue" value="${attr.idpAttribute.value}" />
        <constructor-arg name="facilityAttrsProperties" ref="facilityAttributesProperties" />
        <constructor-arg name="samlAttributes" value="#{'${saml.attrs}'.split('\s*,\s*')}"/>
        <constructor-arg name="oidcAttributes" value="#{'${oidc.scopes}'.split('\s*,\s*')}"/>
        <constructor-arg name="oidcEnabled" value="${oidc.isEnabled}" />
    </bean>

</beans>